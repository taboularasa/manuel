<h1>New Feature</h1>
<div class='row'>
  <div class='col-md-12'>
    <%= simple_form_for(@feature, html: { class: 'form-horizontal' }) do |f| %>
      <%= f.input :title %>
      <div class='row'>
        <div id='scenarios' class='col-md-12'>
          <%= f.simple_fields_for :scenarios do |scenario| %>
            <%= render partial: 'features/scenario_fields', locals: { f: scenario } %>
          <% end %>
          <div class='links'>
            <%= link_to_add_association 'add scenario', f, :scenarios %>
          </div>
        </div>
      </div>
      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
